{
  "compilerOptions": {
    "outDir": "./dist",
    

    // Environment Settings
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "node",

    // Node.js types
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],

    // Output options
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,

    // Module Interop
    "esModuleInterop": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    // Path alias for Prisma generated folder
    "baseUrl": ".",
    "paths": {
      "@prisma/*": ["generated/prisma/*"]
    }
  },
  "include": [
    "src/**/*",
    "generated/prisma/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
