generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id @default(uuid())
  name      String
  email     String     @unique
  password  String
  isBanned  Boolean    @default(false)
  role      Role       @default(CUSTOMER)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  orders    Order[]
  reviews   Review[]
  medicines Medicine[]
  cartItems CartItem[]
}

enum Role {
  CUSTOMER
  SELLER
  ADMIN
}

model Category {
  id        String     @id @default(uuid())
  name      String     @unique
  medicines Medicine[]
}

model Medicine {
  id          String      @id @default(uuid())
  name        String
  description String
  price       Float
  stock       Int
  category    Category    @relation(fields: [categoryId], references: [id])
  categoryId  String
  seller      User        @relation(fields: [sellerId], references: [id])
  sellerId    String
  reviews     Review[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  orderItems  OrderItem[]
  cartItems   CartItem[]
}


model CartItem {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  medicine   Medicine @relation(fields: [medicineId], references: [id])
  medicineId String
  quantity   Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}


model Order {
  id             String      @id @default(uuid())
  customer       User        @relation(fields: [customerId], references: [id])
  customerId     String
  status         OrderStatus @default(PLACED)
  total          Float
  shippingAddress String
  items          OrderItem[]
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}


model OrderItem {
  id         String   @id @default(uuid())
  order      Order    @relation(fields: [orderId], references: [id])
  orderId    String
  medicine   Medicine @relation(fields: [medicineId], references: [id])
  medicineId String
  quantity   Int
  price      Float
}

model Review {
  id         String   @id @default(uuid())
  customer   User     @relation(fields: [customerId], references: [id])
  customerId String
  medicine   Medicine @relation(fields: [medicineId], references: [id])
  medicineId String
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())
}


enum OrderStatus {
  PLACED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}